<%- include('include/layout.ejs'); %>
<div class="container">
    <div class="row justify-content-center">
        <h2>Hello <%= user.name %> Edit your info</h2>
    </div>
    
    <div class="row justify-content-center mt-3">
        <form action="/edit/<%=user._id%>" method="post" id="edit_info"> <!-- Change method to POST -->
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="newName" value="<%= user.name %>" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="newEmail" value="<%= user.email %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>

<!-- Move the home button to the top right corner -->
<div class="row justify-content-center mt-4">
    <a href="/dashbord">
        <button type="button" class="btn btn-primary btn-lg login-button">HOME</button>
    </a>
</div>

<div class="row justify-content-center mt-4">
    <a href="/logout">
        <button type="button" class="btn btn-primary btn-lg btn-block login-button">Logout</button>
    </a>
</div>
</body>
</html>

